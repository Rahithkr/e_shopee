<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>e_shopee login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fontawesome-iconpicker/3.2.0/js/fontawesome-iconpicker.min.js">

    <style>
        /* Add style for the error messages */
        .error-message {
            color: red;
        }
    </style>
</head>
<body>
    <section class="vh-100" style="background-color: #9A616D;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                  alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form action="/user/login" method="post" onsubmit="return validateForm()">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Logo</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                        <div class="form-outline mb-4">
                                            <input value="fobi@gmail.com" type="email" name="email" id="form2Example17" class="form-control form-control-lg" />
                                            <label class="form-label" for="form2Example17" id="emailError">Email address</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input value="Fobi@123" type="password" name="password" id="form2Example27" class="form-control form-control-lg" />
                                            <label class="form-label" for="form2Example27" id="passwordError">Password</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                        </div>
                                    </form>

                                    <a class="small text-muted" href="/user/forgotpass">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: rgb(241, 7, 7);">Don't have an account? <a href="/user/signup"
                                        style="color: #0010bb;">Register here</a></p>
                                 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




    
    <script>
        function validateForm() {
            const email = document.getElementById('form2Example17').value;
            const password = document.getElementById('form2Example27').value;
            const emailError = document.getElementById('emailError');
            const passwordError = document.getElementById('passwordError');

            if (!email || !validateEmail(email)) {
                emailError.innerText = 'Invalid Email Address';
                emailError.classList.add('error-message'); // Add the error class
                return false;
            } else {
                emailError.innerText = 'Email address';
                emailError.classList.remove('error-message'); // Remove the error class
            }

            if (!password || password.length < 8) {
                passwordError.innerText = 'Invalid Password (Minimum 8 characters)';
                passwordError.classList.add('error-message'); // Add the error class
                return false;
            } else {
                passwordError.innerText = 'Password';
                passwordError.classList.remove('error-message'); // Remove the error class
            }

            return true;
        }

        function validateEmail(email) {
            const re = /\S+@\S+\.\S+/;
            return re.test(email);
        }
    </script>
    
