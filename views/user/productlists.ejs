  <script>
    $(document).ready(function () {
      // Get the range input and apply button
      var rangeInput = $("#customRange1");
      var applyButton = $(".btn-white");

      // Add a click event listener to the apply button
      applyButton.click(function () {
        // Get the min and max values from the input fields
        var minPrice = $("#typeNumberMin").val();
        var maxPrice = $("#typeNumberMax").val();

        // Filter the products based on the price range
        $(".card").each(function () {
          var productPrice = parseInt($(this).find(".price").text().replace("₹", "").trim());
          if (productPrice >= minPrice && productPrice <= maxPrice) {
            $(this).show();
          } else {
            $(this).hide();
          }
        });
      });
    });
  </script>





