  <script>
    function searchProducts() {
      const searchBar = document.getElementById('form1');
      const searchString = searchBar.value.toLowerCase();
      const products = document.getElementsByClassName('col-lg-4 col-md-6 mb-4');
      Array.from(products).forEach(function (product) {
        const productName = product.getElementsByClassName('card-title mb-2')[1].innerText.toLowerCase();
        // Use 'card-title mb-2' instead of 'card-title' to get the product name
        if (productName.includes(searchString)) {
          product.style.display = '';
        } else {
          product.style.display = 'none';
        }
      });
    }
  </script>


