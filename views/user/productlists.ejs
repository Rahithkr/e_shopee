  <script>
    function filterProducts(category) {
      // Hide all products
      var products = document.getElementsByClassName('col-lg-4 col-md-6 mb-4');
      for (var i = 0; i < products.length; i++) {
        products[i].style.display = 'none';
      }

      // If the category is "all", show all products
      if (category === 'all') {
        for (var i = 0; i < products.length; i++) {
          products[i].style.display = 'block';
        }
      } else {
        // Show only the products that belong to the selected category
        var categoryProducts = document.getElementsByClassName(category);
        for (var i = 0; i < categoryProducts.length; i++) {
          categoryProducts[i].style.display = 'block';
        }
      }
    }

  </script>





  <script>
    $(document).ready(function () {
      $('#sortFilter').on('change', function () {
        var selectedSort = $(this).val();

        // Get all product cards
        var products = $('.col-lg-4');

        // Sort based on the selected option
        if (selectedSort === 'priceLowToHigh') {
          products.sort(function (a, b) {
            var priceA = parseFloat($(a).data('price'));
            var priceB = parseFloat($(b).data('price'));
            return priceA - priceB;
          });
        } else if (selectedSort === 'priceHighToLow') {
          products.sort(function (a, b) {
            var priceA = parseFloat($(a).data('price'));
            var priceB = parseFloat($(b).data('price'));
            return priceB - priceA;
          });
        } else {
          // Default sorting or other options
          // You can modify this part based on your needs
          // For now, let's assume it's sorting by product ID
          products.sort(function (a, b) {
            var idA = $(a).attr('id');
            var idB = $(b).attr('id');
            return idA.localeCompare(idB);
          });
        }

        // Clear existing products from the container
        $('.row').empty();

        // Append sorted products back to the container
        products.appendTo('.row');
      });
    });
  </script>



