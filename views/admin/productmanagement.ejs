          <script>
            $(document).ready(function () {
              // Initialize Cropper for each image input
              $('input[name="image"]').change(function (event) {
                var files = event.target.files;

                if (files && files.length > 0) {
                  var container = $('#image-preview-container');

                  for (var i = 0; i < files.length; i++) {
                    var reader = new FileReader();
                    var image = new Image();
                    var cropper;

                    reader.onload = (function (img) {
                      return function (e) {
                        img.src = e.target.result;

                        // Create a new image preview container
                        var previewContainer = $('<div class="image-preview"></div>');
                        previewContainer.append(img);

                        // Add a delete button to the preview container
                        var deleteButton = $('<button class="btn btn-danger delete-image-btn">Delete</button>');
                        previewContainer.append(deleteButton);

                        // Append the new container to the main container
                        container.append(previewContainer);

                        // Initialize Cropper
                        cropper = new Cropper(img, {
                          aspectRatio: 1, // Adjust the aspect ratio as needed
                          viewMode: 2,
                          background: false,
                          ready: function () {
                            // Do something when ready
                          },
                        });

                        // Handle delete button click
                        deleteButton.on('click', function () {
                          // Remove the preview container
                          previewContainer.remove();
                        });

                        // Handle crop button click
                        img.addEventListener('click', function () {
                          var croppedDataUrl = cropper.getCroppedCanvas().toDataURL();

                          // Create a hidden input for each cropped image data
                          var hiddenInput = $('<input>')
                            .attr('type', 'hidden')
                            .attr('name', 'croppedImageData[]')
                            .val(croppedDataUrl);

                          // Append the hidden input to the form
                          $('form').append(hiddenInput);
                        });
                      };
                    })(image);

                    reader.readAsDataURL(files[i]);
                  }
                }
              });
            });
          </script>





