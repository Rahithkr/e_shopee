          <script>
            function block_user(form) {
              // swal("Hello world!");
              swal({
                title: "Are you sure?",
                text: "You want Block user!",
                // icon: "warning",
                buttons: true,
                dangerMode: true,
              }).then((willDelete) => {
                if (willDelete) {
                  form.submit();
                }
              });
            }

            function unblock_user(form) {
              // swal("Hello world!");
              swal({
                title: "Are you sure?",
                text: "You want UnBlock user!",
                // icon: "warning",
                buttons: true,
                dangerMode: true,
              }).then((willDelete) => {
