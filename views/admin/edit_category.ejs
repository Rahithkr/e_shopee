    <script>
      function validateForm() {
        const categoryName = document.getElementById('categoryname').value.trim().toLowerCase();

        // Check if the trimmed category name is empty
        if (!categoryName) {
          document.getElementById('error-category').innerText = "Category name cannot be empty or contain only spaces.";
          return false;
        }

        // Check if the category name already exists
        // This assumes you have a function `categoryExists` that checks if a category name exists in the database
        if (categoryExists(categoryName)) {
          document.getElementById('error-category').innerText = "Category already exists";
          return false;
        }

        // If everything is valid, return true to submit the form
        return true;
      }

      // This function handles the form submission and displays the error message from the server
      function handleFormSubmit(event) {
        event.preventDefault();

        if (validateForm()) {
          // Submit the form
          const form = document.getElementById('categoryForm');
          const formData = new FormData(form);

          fetch(form.action, {
            method: 'POST',
            body: formData,
          })
            .then(response => response.json())
            .then(data => {
              if (data.type === 'danger') {
                document.getElementById('error-category').innerText = data.message;
              } else {
                // Handle successful form submission
              }
            })
            .catch(error => console.error('Error:', error));
        }
      }

      // Attach the handleFormSubmit function to the form's submit event
      document.getElementById('categoryForm').addEventListener('submit', handleFormSubmit);
    </script>

