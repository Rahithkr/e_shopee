          <script>
            function showSweetAlert(event, bannerID, description) {
              event.preventDefault();
              Swal.fire({
                title: 'Are you sure?',
                text: `You will not be able to recover the banner: ${description}!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                customClass: {
                  popup: 'black-text-popup', // Add your custom CSS class here
                  title: 'black-text-title',
                  content: 'black-text-content'
                }
              }).then((result) => {
                if (result.isConfirmed) {
                  window.location.href = `/admin/bannerlist/delete/${bannerID}`;
                }
              });
            }
          </script>

