              }
            }
          </script>

          <script>
            const mapErrorKeyToMessage = (key) => {
              const errorMessages = {
                emptyName: 'Product name cannot be empty or contain only spaces.',
                duplicateName: 'Product name already exists. Please choose a different name.',
                updateError: 'Error updating the product. Please try again later.'
                // Add more mappings as needed...
              };

              return errorMessages[key] || 'An unknown error occurred.';
            };

          </script>
          <script>
            function validateForm() {
              const categoryName = document.getElementById('productname').value;
              let isValid = true; // Changed to let for reassignment

              if (categoryName.trim() === "") {
                isValid = false;

                document.getElementById('error-productname').textContent = "productname Name code cannot be empty";
                return isValid;
              }
              const description = document.getElementById('productprice').value;
              if (description < 0) {
                isValid = false;
                document.getElementById('error-productprice').textContent = "Product Price cannot be less than 0";
                return isValid;
              }

              const productcategory = document.getElementById('productcategory').value;


              if (productcategory.trim() === "") {
                isValid = false;

                document.getElementById('error-productcategory').textContent = "category Name code cannot be empty";
                return isValid;
              }
              const productstock = document.getElementById('productstock').value;


              if (productstock.trim() === "" || productstock <= 0) {
                isValid = false;

                document.getElementById('error-productstock').textContent = "stock cannot be empty or lessthan 0";
                return isValid;
              }

              return isValid;
            }
